{% extends 'base.html.twig' %}

{% block body %}
    <div class="media">
        <img class="align-self-start mr-3" src="{{program.poster}}" alt="{{ program.title }} poster">
        <div class="media-body">
            <h1 class="mt-0">{{ program.title }}</h1>
            <p>{{ program.summary }}</p>
            <p><strong>Categorie :</strong> {{ program.category.name }}</p>
            <ul>
                {% for season in seasons %}
                    <li><strong>Saison :</strong><a href="{{ path('wild_show_season', {id: season.number}) }}"> {{ season.number }} </a></li>
                    <li><strong>Année :</strong> {{ season.year }}</li>
                    <li><strong>Description :</strong> {{ season.description }}</li><br>
                {% endfor %}
            </ul>
        </div>
    </div>
    <a href="{{ path('wild_index') }}">
        <u><strong>Retour à l'accueil</strong></u>
    </a>
{% endblock %}
